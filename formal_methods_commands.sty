\newcommand{\until}[1][\undefined]{%
	\ifx#1\undefined%
		\hspace{2pt}\mathcal{U}%
	\else%
		\hspace{2pt}\mathcal{U}_{#1}%
	\fi%
}%
\newcommand{\always}{\Box}%
\newcommand{\eventually}{\Diamond}%
\newcommand{\nxt}{\bigcirc}%
\def\previous{%
    \raisebox{1.25pt}{%
        $\scaleobj{0.75}{
            \mathrlap{\bigcirc}\hspace{1.5pt}%
            \scaleobj{0.9}{-}}$}%
    \hspace{1.5pt}}
\def\weakprevious{%
    \raisebox{1.25pt}{%
        $\scaleobj{0.75}{
            \mathrlap{\bigcirc}\hspace{1.5pt}%
            \scaleobj{0.9}{\sim}}$}%
    \hspace{1.5pt}}
\def\historically{%
        \mathrlap{\Box}\hspace{1.5pt}%
            \raisebox{2pt}{%
                \scaleobj{0.5}{\boldsymbol{-}}}%
    \hspace{1.5pt}}
\def\once{%
        \mathrlap{\Diamond}\hspace{1.6pt}%
            \raisebox{2pt}{%
                \scaleobj{0.5}{\boldsymbol{-}}}%
    \hspace{1.5pt}}
\def\cox{\mathrlap{\bigcirc}\eventually}
\def\mox{\rotatebox[origin=c]{45}{$\cox$}}

