\newcommand{\until}[1][\undefined]{%
	\ifx#1\undefined%
		\hspace{2pt}\mathcal{U}%
	\else%
		\hspace{2pt}\mathcal{U}_{#1}%
	\fi%
}%
\newcommand{\always}{\Box}%
\newcommand{\eventually}{\Diamond}%
\newcommand{\nxt}[1][\undefined]{%
	\ifx#1\undefined%
		\LTLcircle%
	\else%
		\setcounter{ct}{1}%
		\LTLcircle%
		\forloop{ct}{1}{\value{ct} < #1}{%
			\LTLcircle%
		}%
	\fi%
}%
\def\previous{\LTLcircleminus}
\def\weakprevious{\LTLcircletilde}
\def\once{\LTLdiamondminus}
\def\historically{\LTLsquareminus}
\def\cox{\mathrlap{\bigcirc}\eventually}
\def\mox{\rotatebox[origin=c]{45}{$\cox$}}

