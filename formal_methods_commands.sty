\newcommand{\until}[1][\undefined]{%
	\ifx#1\undefined%
		\hspace{2pt}\mathcal{U}%
	\else%
		\hspace{2pt}\mathcal{U}_{#1}%
	\fi%
}%
\newcommand{\always}[1][\undefined]{%
	\ifx#1\undefined%
		\square%
	\else%
		\square_{#1}%
	\fi%
}%
\newcommand{\eventually}[1][\undefined]{%
	\ifx#1\undefined%
		\Diamond%
	\else%
		\Diamond_{#1}%
	\fi%
}%
\newcommand{\nxt}[1][\undefined]{%
	\ifx#1\undefined%
		{\scriptstyle\bigcirc}
	\else%
		\setcounter{ct}{1}%
		{\scriptstyle\bigcirc}%
		\forloop{ct}{1}{\value{ct} < #1}{%
			{\scriptstyle\bigcirc}
		}%
	\fi%
}%
\newcommand{\X}[1][\undefined]{\nxt[#1]}%

